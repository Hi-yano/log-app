<h1>Equipments#new</h1>
<p>Find me in app/views/equipments/new.html.erb</p>
<%= link_to 'トップページに戻る', root_path %>

<%= form_with(model: @equipment, url: equipments_path, local: true) do |f| %>
  <div>
    <p>厚み</P>
    <%= f.text_field :thickness, placeholder:"例）5" %>
  </div>
  <div>
    <p>type</P>
    <%= f.collection_select(:entry, Type.all, :id, :name, {}) %>
  </div>
  <div>
    <p>weight</P>
    <%= f.text_field :weight, placeholder:"例）5" %>
  </div>
  <div>
    <p>tank_cap</P>
    <%= f.collection_select(:entry, Capacity.all, :id, :name, {}) %>
  </div>
  <div>
    <p>tank_type</P>
    <%= f.collection_select(:entry, Type.all, :id, :name, {}) %>
  </div>

  <%= f.submit "次へ", class:"sell-btn" %>
<% end %>